<script src="https://kit.fontawesome.com/2ff29df84d.js" crossorigin="anonymous"></script>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h1>User Info</h1>
            <p><%= image_tag @user.get_profile_image(100,100) %></p>

            <table class="table">
            <tbody>
                <tr>
                    <th scope="row">name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th scope="row">introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </tbody>
            </table>

            <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block edit_user_133688' do %>
            <i class="fa-solid fa-user-gear"></i>
            <% end %>

             <h2>New Book</h2>
            <%= form_with model: @book do |f| %>
             <p>Title</p>
             <%= f.text_field :title %>

              <p>Opinion</p>
              <%= f.text_area :body %>

              <%= f.submit 'Create Book', class: "btn btn-success" %>
            <% end %>
        </div>

        <div class="col-md-9">
            <h3>Books</h3>

            <table class="table">
                <thead>
                <tr>
                    <th></th>
                    <th scope="col"><p class="font-weight-bold">Title</p></th>
                    <th scope="col"><p class="font-weight-bold">Opinion</p></th>
                </tr>
                  <% @books.each do |book| %>
                  <tr>
                    <td scope="col"><p class="my-1"><%= image_tag @user.get_profile_image(100, 100) %></p></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  <% end %>
                </tr>
            </table>
        </div>
    </div>
</div>


