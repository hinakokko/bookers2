<script src="https://kit.fontawesome.com/2ff29df84d.js" crossorigin="anonymous"></script>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="pt-3">
            <h2>User Info</h2>
            </div>
            <p><%= image_tag @user.get_profile_image(100,100) %></p>

            <table class="table">
            <tbody>
                <tr>
                    <th scope="row">name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th scope="row">introduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </tbody>
            </table>

            <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block edit_user_133688' do %>
            <i class="fa-solid fa-user-gear"></i>
            <% end %>

             <h2>New book</h2>
            <%= form_with model: @book do |f| %>
             <p>Title</p>
             <%= f.text_field :title %>

              <p>Opinion</p>
              <%= f.text_area :body %>

              <%= f.submit 'Create Book', class: "btn btn-success" %>
            <% end %>
        </div>

        <div class="col-md-9">
            <h3>Users</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"><p class="font-weight-bold">image</p></th>
                        <th scope="col"><p class="font-weight-bold">name</p></th>
                    </tr>
                    <% @users.each do |user| %>
                    <tr>
                        <td scope="col"><p class="my-1"><%= image_tag user.get_profile_image(100, 100) %></p></td>
                        <td scope="col"><p class="w-50"><%= user.name %></p></td>
                        <td scope="col"><p class="my-1"><%= link_to 'Show', user_path(user.id) %></p></td>
                    </tr>
                    <% end %>
                </thead>
            </table>
        </div>
    </div>
</div>


