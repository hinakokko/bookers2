             <h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
        </div>


   <h1>Books</h1>
   <%= @books.each do |book| %>

    <p>Title</p>
    <span><%= book.title %></span>

    <p>body</p>
    <span><%= book.body %></span>

    <% end %>


</div>